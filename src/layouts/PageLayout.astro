---
import NavigationHeader from '@/components/nav/NavigationHeader';
import Footer from '@/components/layout/Footer';

const { activePath } = Astro.props;

// Generate build time dynamically
const buildTime = new Date().toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<div class="master-container">
    <NavigationHeader activePath={activePath} />
    <div class="page-container">
        <slot />
    </div>
    <Footer buildTime={buildTime} client:load />
</div>

<style>
    .master-container {
        margin: 0 auto;
        width: var(--container-width);
        min-height: 100vh;
        padding: 64px 0px 0px 0px;
        display: flex;
        flex-direction: column;
    }

    .page-container {
        padding: 24px 0px;
        flex: 1;
    }
</style>