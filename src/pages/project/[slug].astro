---
import { getCollection, type CollectionEntry } from 'astro:content';
import RootLayout from '@/layouts/RootLayout.astro';
import PageLayout from '@/layouts/PageLayout.astro';
import SkillCard from '@/components/skills/SkillCard';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project: CollectionEntry<'projects'>) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project }: Props = Astro.props;
const { Content } = await project.render();
---

<RootLayout title={`${project.data.title} - TaeHyun Kim`}>
  <PageLayout>
    <article class="project-article">
      <header class="project-header">
        <div class="project-meta">
          <div class="project-tags">
            {project.data.tags.map((tag: string) => (
              <span class={`project-tag ${tag}`}>{tag}</span>
            ))}
          </div>
          <time class="project-date">{new Date(project.data.date).toLocaleDateString()}</time>
        </div>
        
        <h1 class="project-title">{project.data.title}</h1>
        <p class="project-description">{project.data.description}</p>
        
        <div class="project-skills">
          <h3>Technologies Used:</h3>
          <div class="skills-list">
            {project.data.skills.map((skill: string) => (
              <SkillCard title={skill} />
            ))}
          </div>
        </div>
      </header>

      <div class="project-thumbnail">
        <img src={project.data.thumbnail} alt={project.data.title} />
      </div>

      <div class="project-content">
        <Content />
      </div>
    </article>
  </PageLayout>
</RootLayout>

<style>
  .project-article {
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 24px 0;
  }

  .project-header {
    margin-bottom: 32px;
  }

  .project-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  .project-tags {
    display: flex;
    gap: 8px;
  }

  .project-tag {
    padding: 4px 8px;
    border-radius: var(--radius);
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .project-tag.professional {
    background-color: #e3f2fd;
    color: #1976d2;
  }

  .project-tag.personal {
    background-color: #f3e5f5;
    color: #7b1fa2;
  }

  .project-tag.freelance {
    background-color: #e8f5e8;
    color: #388e3c;
  }

  .project-tag.academic {
    background-color: #fff3e0;
    color: #f57c00;
  }

  .project-tag.open-source {
    background-color: #fce4ec;
    color: #c2185b;
  }

  .project-date {
    font-size: 14px;
    color: #666;
  }

  .project-title {
    font-family: var(--font-serif);
    font-size: 32px;
    font-weight: 600;
    color: var(--black);
    margin: 16px 0;
  }

  .project-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .project-skills h3 {
    font-size: 16px;
    color: var(--black);
    margin-bottom: 8px;
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .skill-tag {
    padding: 6px 12px;
    background-color: var(--background-gray);
    border: 1px solid var(--border-color);
    border-radius: var(--radius);
    font-size: 14px;
    color: var(--black);
  }

  .project-thumbnail {
    width: 100%;
    margin-bottom: 32px;
    border-radius: var(--radius);
    overflow: hidden;
  }

  .project-thumbnail img {
    width: 100%;
    height: auto;
    display: block;
  }

  .project-content {
    line-height: 1.7;
  }

  .project-content h2 {
    font-family: var(--font-serif);
    font-size: 24px;
    color: var(--black);
    margin: 32px 0 16px 0;
  }

  .project-content h3 {
    font-family: var(--font-serif);
    font-size: 20px;
    color: var(--black);
    margin: 24px 0 12px 0;
  }

  .project-content p {
    margin-bottom: 16px;
  }

  .project-content ul, .project-content ol {
    margin-bottom: 16px;
    padding-left: 24px;
  }

  .project-content li {
    margin-bottom: 8px;
  }

  .project-content code {
    background-color: #f5f5f5;
    padding: 2px 4px;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 14px;
  }

  .project-content pre {
    background-color: #f5f5f5;
    padding: 16px;
    border-radius: var(--radius);
    overflow-x: auto;
    margin-bottom: 16px;
  }

  .project-content pre code {
    background: none;
    padding: 0;
  }
</style>
